  <agentRegion>
    <numAgents>50</numAgents>
    <regionBounds>
      <xmin>-10</xmin>
      <xmax>10</xmax>
      <ymin>0</ymin>
      <ymax>0</ymax>
      <zmin>15</zmin>
      <zmax>45</zmax>
    </regionBounds>
    <initialConditions>
      <direction> <x>1</x> <y>0</y> <z>0</z> </direction>
      <radius>0.5</radius>
      <speed>1.2</speed>
    </initialConditions>
    <goalSequence>
      <seekStaticTarget>
        <targetLocation> <x>0</x> <y>0</y> <z>-15</z> </targetLocation>
        <desiredSpeed>1.3</desiredSpeed>
        <timeDuration>1000.0</timeDuration>
      </seekStaticTarget>
    </goalSequence>

  </agentRegion>
  

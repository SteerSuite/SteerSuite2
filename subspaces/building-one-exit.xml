<SteerSuiteSubSpace xmlns="http://www.magix.ucla.edu/steerbench"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://www.magix.ucla.edu/steerbench 
                                        TestCaseSchema.xsd"
                    SubSpaceSamples="10">

  <header>
    <version>1.1</version>
    <name>hallway-one-way</name>
    <worldBounds>
      <xmin>-100</xmin>
      <xmax>100</xmax>
      <ymin>0</ymin>
      <ymax>0</ymax>
      <zmin>-100</zmin>
      <zmax>100</zmax>
    </worldBounds>
  </header>
  
  <suggestedCameraView>
    <position> <x>0</x> <y>100</y> <z>-30</z> </position>
    <lookat> <x>0</x> <y>0</y> <z>0</z> </lookat>
    <up> <x>0</x> <y>1</y> <z>0</z> </up>
    <fovy>45</fovy>
  </suggestedCameraView>

  <obstacle>
    <xmin>-25</xmin>
    <xmax>-13</xmax>
    <ymin>0</ymin>
    <ymax>1</ymax>
    <zmin>-30</zmin>
    <zmax>50</zmax>
  </obstacle>

  <obstacle>
    <xmin>13</xmin>
    <xmax>25</xmax>
    <ymin>0</ymin>
    <ymax>1</ymax>
    <zmin>-30</zmin>
    <zmax>50</zmax>
  </obstacle>
  
   <obstacle>
    <xmin>-13</xmin>
    <xmax>13</xmax>
    <ymin>0</ymin>
    <ymax>1</ymax>
    <zmin>48</zmin>
    <zmax>50</zmax>
  </obstacle>
  
  <orientedWallObstacle>
	  <thetaY>0</thetaY>
	  <size>
	  	<x>20</x> <y>1</y> <z>1</z>
	  </size>
	  <position>
	  	<x>0</x> <y>0</y> <z>-5</z>
	  </position>
	  <doorway>
	      <value>-2.5</value>
	      <doorRadius>1.0</doorRadius>
	  </doorway>
  </orientedWallObstacle>
  
  <!-- <orientedBoxObstacle>
	  <thetaY>0</thetaY>
	  <size>
	  	<x>20</x> <y>1</y> <z>1</z>
	  </size>
	  <position>
	  	<x>0</x> <y>0</y> <z>-3</z>
	  </position>

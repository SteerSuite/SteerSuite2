<SteerBenchTestCase xmlns="http://www.magix.ucla.edu/steerbench"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://www.magix.ucla.edu/steerbench 
                                        TestCaseSchema.xsd">
<!-- Works for the b140_combined data -->
  <header>
    <version>1.0</version>
    <name>hallway-one-way</name>
    <worldBounds>
      <xmin>-50</xmin>
      <xmax>50</xmax>
      <ymin>0</ymin>
      <ymax>0</ymax>
      <zmin>-50</zmin>
      <zmax>50</zmax>
    </worldBounds>
  </header>
  
  <suggestedCameraView>
    <position> <x>0</x> <y>100</y> <z>-30</z> </position>
    <lookat> <x>0</x> <y>0</y> <z>0</z> </lookat>
    <up> <x>0</x> <y>1</y> <z>0</z> </up>
    <fovy>45</fovy>
  </suggestedCameraView>

	
  <obstacle>
    <xmin>-50</xmin>
    <xmax>-1.6</xmax>
    <ymin>0</ymin>
    <ymax>1</ymax>
    <zmin>0</zmin>
    <zmax>8</zmax>
  </obstacle>

  <obstacle>
    <xmin>1.8</xmin>
    <xmax>50</xmax>
    <ymin>0</ymin>
    <ymax>1</ymax>
    <zmin>0</zmin>
    <zmax>8</zmax>
  </obstacle>
  

  <agentRegion>
    <numAgents>500</numAgents>
    <regionBounds>
      <xmin>-18</xmin>
      <xmax>18</xmax>
      <ymin>0</ymin>
      <ymax>0</ymax>
      <zmin>-40</zmin>
      <zmax>-5</zmax>
    </regionBounds>
    <initialConditions>
      <direction> <x>1</x> <y>0</y> <z>0</z> </direction>
      <radius>0.5</radius>
      <speed>1.33</speed>
    </initialConditions>
    <goalSequence>
      <seekStaticTarget>
        <targetLocation> <x>0</x> <y>0</y> <z>10</z> </targetLocation>
        <desiredSpeed>1.3</desiredSpeed>
        <timeDuration>1000.0</timeDuration>
      </seekStaticTarget>
    </goalSequence>

  </agentRegion>

</SteerBenchTestCase>
